<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/service_comment_text_field"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:endIconMode="clear_text"
        app:boxStrokeColor="@color/ummo_2"
        app:hintTextColor="@color/ummo_2"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconContentDescription="Service Comment Icon"
        app:startIconDrawable="@drawable/message_toolbar_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/service_comment_edit_text_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/rubik"
            android:hint="@string/recommend_service_improvements"
            android:lines="2"
            android:textColorHint="@color/ummo_2"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/anonymous_comment_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/anonymous_comment"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_comment_text_field"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>